{# src/Codemonkey/PortfolioBundle/Resources/views/Default/posts.html.twig #}
{% extends '::base.html.twig' %}

{% block body %}
    <div class="main-box">
        {# Include Menu file #}
        {{ include('CodemonkeyPortfolioBundle:Includes:menu.html.twig') }}

        {# Include Breadcrumbs file #}
        {{ include('CodemonkeyPortfolioBundle:Includes:breadcrumbs.html.twig') }}

        <div id="content-wrapper" class="content-wrapper">
            <div class="container">
                <!-- Content -->
                <div class="content grid_9" id="content">
                    {% for post in posts %}
                        {% if post.postType.id == 1 %}
                            {# Standard Post Type #}
                            <article class="entry entry__standard">
                                <!-- begin post image -->
                                <figure class="thumb">
                                    <a href="#"><img src="{{ post.image }}" height="208" width="680" alt=""></a>
                                </figure>
                                <!-- end post image -->

                                <!-- begin post heading -->
                                <header class="entry-header clearfix">
                                    <div class="format-icon">
                                        <div class="format-icon-inner">
                                            <i class="icon-file-alt"></i>
                                        </div>
                                    </div>
                                    <div class="entry-header-inner">
                                        <h3 class="entry-title"><a href="#">{{ post.title }}</a></h3>
                                        <p class="post-meta">
                                            <span class="post-meta-date"><a href="#"><i class="icon-calendar"></i>{{ post.date|date("d, M Y") }}</a></span>
                                            <!--span class="post-meta-cats"><i class="icon-tag"></i><a href="#">art</a>, <a href="#">photo</a></span-->
                                            <!--span class="post-meta-comments"><a href="#"><i class="icon-comments-alt"></i>16</a></span-->
                                        </p>
                                    </div>
                                </header>
                                <!-- end post heading -->

                                <!-- begin post content -->
                                <div class="entry-content">
                                    {{ post.intro }}
                                </div>
                                <!-- end post content -->

                                <!-- begin post footer -->
                                <footer class="entry-footer">
                                    <a href="#" class="link">{{ 'codemonkey.blog.read_more'|trans({}, 'content') }} <i class="icon-chevron-sign-right"></i></a>
                                </footer>
                                <!-- end post footer -->
                            </article>
                        {% elseif post.postType.id == 2 %}
                            {# Gallery Post Type #}
                            <article class="entry entry__gallery">
                                {% if post.gallery is defined and post.gallery|length != 0 %}
                                    <!-- begin post image -->
                                    <div class="flexslider flexslider__nav-on">
                                        <ul class="slides">
                                            {% for image in post.gallery %}
                                                <li>
                                                    <img src="{{ image.url }}" height="208" width="680" alt="">
                                                    {% if image.description is not null %}
                                                        <br />
                                                        {{ image.description }}
                                                    {% endif %}
                                                </li>
                                            {% endfor %}
                                        </ul>
                                    </div>
                                    <!-- end post image -->
                                {% endif %}

                                <!-- begin post heading -->
                                <header class="entry-header clearfix">
                                    <div class="format-icon">
                                        <div class="format-icon-inner">
                                            <i class="icon-picture"></i>
                                        </div>
                                    </div>
                                    <div class="entry-header-inner">
                                        <h3 class="entry-title"><a href="#">{{ post.title }}</a></h3>
                                        <p class="post-meta">
                                            <span class="post-meta-date"><a href="#"><i class="icon-calendar"></i>{{ post.date|date("d, M Y") }}</a></span>
                                        </p>
                                    </div>
                                </header>
                                <!-- end post heading -->

                                <!-- begin post content -->
                                <div class="entry-content">
                                    <div>
                                        {{ post.intro }}
                                    </div>
                                </div>
                                <!-- end post content -->

                                <!-- begin post footer -->
                                <footer class="entry-footer">
                                    <a href="#" class="link">{{ 'codemonkey.blog.read_more'|trans({}, 'content') }} <i class="icon-chevron-sign-right"></i></a>
                                </footer>
                                <!-- end post footer -->
                            </article>
                        {% elseif post.postType.id == 3 %}
                            {# Video Post Type #}
                            <article class="entry entry__video">
                                <!-- begin video -->
                                <figure class="video-holder">
                                    <iframe src="http://player.vimeo.com/video/7449107?title=0&byline=0&portrait=0&color=b8622b" width="612" height="343" frameborder="0" webkitAllowFullScreen mozallowfullscreen allowFullScreen></iframe>
                                </figure>
                                <!-- end video -->

                                <!-- begin post heading -->
                                <header class="entry-header clearfix">
                                    <div class="format-icon">
                                        <div class="format-icon-inner">
                                            <i class="icon-film"></i>
                                        </div>
                                    </div>
                                    <div class="entry-header-inner">
                                        <h3 class="entry-title"><a href="#">{{ post.title }}</a></h3>
                                        <p class="post-meta">
                                            <span class="post-meta-date"><a href="#"><i class="icon-calendar"></i>{{ post.date|date("d, M Y") }}</a></span>
                                        </p>
                                    </div>
                                </header>
                                <!-- end post heading -->

                                <!-- begin post content -->
                                <div class="entry-content">
                                    <div>{{ post.intro }}</div>
                                </div>
                                <!-- end post content -->

                                <!-- begin post footer -->
                                <footer class="entry-footer">
                                    <a href="#" class="link">{{ 'codemonkey.blog.read_more'|trans({}, 'content') }} <i class="icon-chevron-sign-right"></i></a>
                                </footer>
                                <!-- end post footer -->
                            </article>
                        {% elseif post.postType.id == 4 %}
                            {# Quote Post Type #}
                            <article class="entry entry__quote">
                                <!-- begin post heading -->
                                <header class="entry-header">
                                    <div class="format-icon">
                                        <div class="format-icon-inner">
                                            <i class="icon-quote-left"></i>
                                        </div>
                                    </div>
                                </header>
                                <!-- end post heading -->
                                <!-- begin post content -->
                                <div class="entry-content">
                                    <!-- Blockquote -->
                                    <blockquote>
                                        <p>{{ post.body }}</p>
                                        <cite><strong>John Doe</strong>, Web Designer</cite>
                                    </blockquote>
                                    <!-- /Blockquote -->
                                </div>
                                <!-- end post content -->
                            </article>
                        {% elseif post.postType.id == 5 %}
                            {# External Post Type #}
                        {% elseif post.postType.id == 6 %}
                            {# Standard without Image Post Type#}
                        {% endif %}
                    {% endfor %}
                </div>

                <!-- Sidebar -->
                <aside class="sidebar grid_3" id="sidebar">
                </aside>
            </div>
        </div>
    </div>
{% endblock %}