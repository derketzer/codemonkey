{# src/Codemonkey/PortfolioBundle/Resources/views/Includes/last_news.html.twig #}
<div class="grid_4 mobile-nomargin">
    <h3>{{ 'codemonkey.home.last_posts'|trans({}, 'content') }}</h3>
    <ul class="thumbs-list">
        {% for post in posts %}
        <li class="list-item clearfix">
            <figure class="item-thumb">
                <a href="#">
                    <img src="{{ post.image }}" height="74" width="74" alt="" />
                </a>
            </figure>
            <span class="date">{{ post.date|date("d, M Y") }}</span>
            <h5 class="item-heading">
                <a href="#">{{ post.title }}</a>
            </h5>
        </li>
        {% endfor %}
    </ul>
    <div class="right">
        <a href="{{ path('posts') }}" class="button">
            <span class="button-inner">
                {{ 'codemonkey.home.all_entries'|trans({}, 'content') }}
            </span>
        </a>
    </div>

</div>